# =================================================================
# MultiStream Clipper Backend Configuration
# =================================================================

# Server Configuration
PORT=3000
NODE_ENV=development

# =================================================================
# Twitch API Configuration
# Get these from: https://dev.twitch.tv/console/apps
# =================================================================

# Required: Twitch Application Credentials
TWITCH_CLIENT_ID=your_twitch_client_id_here
TWITCH_CLIENT_SECRET=your_twitch_client_secret_here

# Required: User Access Token (needs clips:edit scope)
# Generate at: https://twitchtokengenerator.com/
TWITCH_ACCESS_TOKEN=your_user_access_token_here

# Optional: Bot Account for Chat (recommended for production)
TWITCH_BOT_USERNAME=your_bot_username
TWITCH_BOT_OAUTH=oauth:your_bot_oauth_token_here

# =================================================================
# YouTube API Configuration
# Get these from: https://console.cloud.google.com/
# =================================================================

# Required for YouTube Live Chat posting
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here

# Optional: YouTube Channel/Stream Configuration
YOUTUBE_CHANNEL_ID=your_youtube_channel_id
YOUTUBE_LIVE_STREAM_ID=your_live_stream_id

# =================================================================
# Application Settings
# =================================================================

# Default clip duration (5-60 seconds)
DEFAULT_CLIP_DURATION=30

# Default message template for clip sharing
CLIP_MESSAGE_TEMPLATE="ðŸŽ¬ Check out this clip! {url}"

# Rate limiting (requests per minute)
RATE_LIMIT_REQUESTS_PER_MINUTE=30

# =================================================================
# Development/Debug Settings
# =================================================================

# Log level: error, warn, info, debug
LOG_LEVEL=info

# Enable debug mode for detailed logging
DEBUG_MODE=false

# WebSocket port for Stream Deck communication
WEBSOCKET_PORT=3001

